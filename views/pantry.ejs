<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
      <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Pantry</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Ubuntu&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="pantry.css">
  </head>
  <body>

    <div class="topheader">
      <div class="align-items-center container">
       <a href="/"> <img src="siemens.jpg" alt="" id="logo"></a>
      </div>
    </div>

    <div class="pantry">
      <div class="container">
        <h4 onclick="showup()">Upcoming Today <i class="fas fa-chevron-down" style="float:right"></i></h4><hr>
        <div id="today" class="row">
          <% if(pantry[0].length == 0){ %>
           <h6> No Upcoming events Today </h6>
          <% } if(pantry[0].length!=0){ pantry[0].forEach(function(item){ %>
          <div class="col-md-3 col-sm-6" style="padding:10px; height:100%;">
          <ul class="list-group" style="height:100%;">
            <li class="list-group-item active"> <%if(item.room=="1"){ %> Room 1 <% }%>  <%if(item.room=="2"){ %> Room 2 <% }%> <%= item.stime %> - <%= item.etime %></li>
            <li class="list-group-item"><%= item.pantry %> </li>
            <li class="list-group-item "><%= item.name %>  </li>
            <li class="list-group-item"><%= item.contact %></li>
          </ul><br>
          </div>
          <% }); } %>
        </div><br>
        <h4 onclick="showsc()"> Scheduled Tommorow <i class="fas fa-chevron-down" style="float:right"></i></h4><hr>
        <div id="scheduled" class="hide row">
          <% if(pantry[1].length == 0){ %>
           <h6> No Upcoming events Tommorrow </h6>
          <% } if(pantry[1].length!=0){ pantry[1].forEach(function(item){ %>
          <div class="col-md-3 col-sm-6" style="padding:10px; height:100%;">
          <ul class="list-group">
            <li class="list-group-item active"> <%if(item.room=="1"){ %> Room 1 <% }%>  <%if(item.room=="2"){ %> Room 2 <% }%> <%= item.stime %> - <%= item.etime %></li>
            <li class="list-group-item"><%= item.pantry %></li>
            <li class="list-group-item"><%= item.name %></li>
            <li class="list-group-item"> <%= item.contact %></li>
          </ul><br>
          </div>
          <% }); } %>
        </div>
      </div>
    </div>

    <script type="text/javascript">
      function showup(){
        var id = document.getElementById('today');
        id.classList.toggle('hide');
      }

      function showsc(){
        var id = document.getElementById('scheduled');
        id.classList.toggle('hide')
      }
    </script>


  </body>
</html>
